<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_directions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/durections"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_400"/>

    <TextView
        android:id="@+id/tvCalling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_calling"
        app:layout_constraintEnd_toStartOf="@+id/tvDuration"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/call"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/opensans_400"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/durections"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/opensans_700"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@+id/tvCalling"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/durections"
        android:textColor="#676767"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_400"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName"/>

    <TextView
        android:id="@+id/tvOpen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/durections"
        android:textColor="#12AD0F"
        android:textSize="12sp"
        android:fontFamily="@font/opensans_400"
        android:maxLines="1"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="@+id/tvName"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvLocation"/>
</androidx.constraintlayout.widget.ConstraintLayout>
