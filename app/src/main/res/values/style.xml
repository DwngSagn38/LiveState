<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#CCCCCC</item>
        <item name="colorControlActivated">#FFB800</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <!--        <item name="colorPrimaryDark">@color/color_app</item>-->
        <!--        <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ItemMain" parent="Theme.AppCompat">
        <item name="android:layout_width">180dp</item>
        <item name="android:background">@drawable/bg_item_main</item>
        <item name="android:layout_marginHorizontal">14dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextItemMain" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_item</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/bevietnampro_600</item>
    </style>

</resources>